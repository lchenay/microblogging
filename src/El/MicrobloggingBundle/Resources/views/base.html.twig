<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset=utf-8" />
        <title>Microblogging system - {% block title %}homepage{% endblock %}</title>
        {% block stylesheets %}
    {% stylesheets
         '@ElMicrobloggingBundle/Resources/public/css/bootstrap.css'
         '@ElMicrobloggingBundle/Resources/public/css/bootstrap-responsive.css'
    %}

    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}
        {% endblock %}
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    <style>
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    </style>
</head>
<body>
    {% block topbar %}{% endblock %}
        
    <div class="container">
        {% if app.session.hasFlash('profile-notice') %}
            <div class="alert fade in alert-success">
                        <a href="#" data-dismiss="alert" class="close">Ã—</a>
                        {{ app.session.flash('profile-notice') }}
                    </div>
            </div>
        {% endif %}
        
        {% block body %}{% endblock %}
    </div>
    {% block javascripts %}
        {% javascripts
            '@ElMicrobloggingBundle/Resources/public/js/jquery.js'
            '@ElMicrobloggingBundle/Resources/public/js/bootstrap.js'
        %}

        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
        {% endblock %}
    </body>
</html>